<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .task-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 20px 30px rgba(0, 0, 0, 0.3);
    }

    .task-card::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: 12px;
      background: linear-gradient(135deg, #3b82f6 0%, #ec4899 100%);
      opacity: 0.06;
      transition: opacity 0.4s ease;
      pointer-events: none;
    }

    .task-card:hover::before {
      opacity: 0.12;
    }

    .fade-in {
      animation: fadeIn 0.7s ease-out both;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .empty-icon {
      animation: float 2s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }
  </style>
</head>
<body class="bg-zinc-900 font-sans">

  <div class="main w-full min-h-screen px-4 sm:px-8 py-10">

    <!-- Form Section -->
    <div class="form max-w-2xl mx-auto p-6 rounded-xl bg-zinc-800/80 shadow-2xl text-white backdrop-blur-md fade-in">
      <h2 class="text-2xl font-bold mb-4 text-blue-400 tracking-tight">📝 Create a New Task</h2>
      <form action="/create" method="post" class="space-y-4">
        <input
          class="w-full rounded-lg outline-none text-white px-5 py-3 bg-zinc-700 focus:ring-2 focus:ring-blue-500 transition-all"
          type="text"
          placeholder="Title Goes Here"
          name="title"
          required
        />
        <textarea
          class="w-full h-32 rounded-lg outline-none text-white px-5 py-3 bg-zinc-700 resize-none focus:ring-2 focus:ring-blue-500 transition-all"
          placeholder="Write Your Task Details"
          name="details"
          required
        ></textarea>
        <input
          class="bg-gradient-to-r from-blue-600 to-pink-500 hover:brightness-110 text-white font-medium rounded-lg px-6 py-3 transition-all duration-300 shadow-md cursor-pointer w-full"
          type="submit"
          value="Create Task"
        />
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="tasks flex flex-wrap justify-center gap-6 mt-12 fade-in">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div
            class="task-card min-w-[280px] max-w-xs bg-zinc-800 px-5 py-6 rounded-xl relative overflow-hidden transition-all duration-300 group"
          >
            <h1
              class="text-white text-2xl font-semibold tracking-tight mb-3 group-hover:text-blue-400 transition-colors duration-300"
            >
              <%= val %>
            </h1>
            <div class="flex justify-between items-center mt-4 text-sm z-10 relative">
              <a
                class="text-blue-500 hover:underline hover:text-blue-400 transition-colors"
                href="/file/<%= val %>"
              >
                📖 Read More
              </a>
              <a
                class="text-zinc-400 hover:text-zinc-200 hover:underline transition-colors"
                href="/edit/<%= val %>"
              >
                ✏️ Edit
              </a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <!-- Empty State with SVG -->
        <div class="w-full flex flex-col items-center mt-20 text-zinc-400 fade-in">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-zinc-600 mb-4 empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5L12 3l9 4.5M4.5 10.5v7.875c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V10.5M9.75 21v-6h4.5v6" />
          </svg>
          <p class="text-lg font-semibold">No tasks found</p>
          <p class="text-sm text-zinc-500">Start by creating your first task above.</p>
        </div>
      <% } %>
    </div>

  </div>
</body>
</html>
